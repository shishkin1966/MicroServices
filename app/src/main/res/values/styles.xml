<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalThinDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalGradientDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="BaseTextStyle" parent="@android:style/Widget.TextView" />

    <style name="HelveticaTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SideMenuTextStyle" parent="HelveticaTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SideMenuBottomButtonStyle" parent="SideMenuTextStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/dimen_4dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/menu_button_selector</item>
        <item name="android:textColor">@color/menu_text_selector</item>
    </style>

    <style name="HeaderItemStyle">
        <item name="android:layout_height">@dimen/dimen_48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="ButtonStyle" parent="HelveticaTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FlatOrangeButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white_text_selector</item>
        <item name="android:background">@drawable/orange_text_button_background</item>
    </style>


</resources>